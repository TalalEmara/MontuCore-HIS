meta {
  name: Generate Share Link - Lab Tests Only
  type: http
  seq: 5
}

post {
  url: {{baseURL}}/consults/share
  body: json
  auth: bearer
}

auth:bearer {
  token: {{authToken}}
}

body:json {
  {
    "athleteId": 6,
    "externalEmail": "lab.specialist@pathology.com",
    "permissions": {
      "labIds": [1, 2, 3],
      "notes": "Please review CBC and Lipid Panel results"
    },
    "expiryHours": 48
  }
}

docs {
  # Share Lab Tests Only
  
  Example of sharing only laboratory test results.
  Useful when consulting with pathologists or lab specialists.
}

script:post-response {
  if (res.status === 201 && res.body.data?.shareToken) {
    console.log("Lab Tests Only Link:", res.body.data.fullLink);
  }
}
